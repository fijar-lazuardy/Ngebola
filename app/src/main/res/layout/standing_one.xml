<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standing_rank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    app:cardBackgroundColor="@color/yujin_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp">

        <TextView
            android:id="@+id/standing_pos_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:width="@dimen/_20sdp"
            android:textColor="@color/minju_color" />

        <TextView
            android:id="@+id/team_name_one"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/standing_pos_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
        <TextView
            android:id="@+id/win_holder_one"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/team_name_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
        <TextView
            android:id="@+id/draw_holder_one"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/win_holder_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
        <TextView
            android:id="@+id/lose_holder_one"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/draw_holder_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
        <TextView
            android:id="@+id/gf_holder_one"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lose_holder_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
        <TextView
            android:id="@+id/ga_holder_one"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/gf_holder_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color" />
        <TextView
            android:id="@+id/gd_holder_one"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ga_holder_one"
            android:textAlignment="center"
            android:textColor="@color/minju_color"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>